<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.fx.ControladorMeterProyectos" prefHeight="600.0" prefWidth="800.0">
    <VBox spacing="20" alignment="TOP_CENTER" fillWidth="true" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <!-- Formulario para ingresar detalles del proyecto -->
        <VBox spacing="10" alignment="TOP_CENTER">
            <Label text="Agregar/Editar Proyecto" />
            <TextField fx:id="txtNombreProyecto" promptText="Nombre del Proyecto"/>
            <DatePicker fx:id="dpFechaCreacion" promptText="Fecha de Creación"/>
            <DatePicker fx:id="dpFechaInicio" promptText="Fecha de Inicio"/>
            <DatePicker fx:id="dpFechaFin" promptText="Fecha de Fin"/>
            <TextField fx:id="txtCodigoProyecto" promptText="Código del Proyecto"/>
            <TextField fx:id="txtPalabrasClave" promptText="Palabras Clave"/>
            <TextField fx:id="txtTipoProyecto" promptText="Tipo de Proyecto"/>
            <CheckBox fx:id="chkActivo" text="Activo"/>
            <TextField fx:id="txtCalificacion" promptText="Calificación"/>
            <!-- Documentos y otros campos binarios o grandes pueden requerir un manejo especial -->
            <Button text="Guardar" onAction="#guardarProyecto"/>
            <Button text="Cancelar" onAction="#cancelarProyecto"/>
        </VBox>

        <!-- Tabla para mostrar los proyectos -->
        <TableView fx:id="tablaProyectos" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="Nombre" prefWidth="200.0">
                    <cellValueFactory><PropertyValueFactory property="nombreProyecto"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Fecha de Creación" prefWidth="150.0">
                    <cellValueFactory><PropertyValueFactory property="fechaCreacion"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Fecha de Inicio" prefWidth="150.0">
                    <cellValueFactory><PropertyValueFactory property="fechaInicio"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Fecha de Fin" prefWidth="150.0">
                    <cellValueFactory><PropertyValueFactory property="fechaFin"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Código" prefWidth="100.0">
                    <cellValueFactory><PropertyValueFactory property="codigoProyecto"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Palabras Clave" prefWidth="200.0">
                    <cellValueFactory><PropertyValueFactory property="palabrasClave"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Tipo" prefWidth="100.0">
                    <cellValueFactory><PropertyValueFactory property="tipoProyecto"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Activo" prefWidth="50.0">
                    <cellValueFactory><PropertyValueFactory property="activo"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Calificación" prefWidth="100.0">
                    <cellValueFactory><PropertyValueFactory property="calificacion"/></cellValueFactory>
                </TableColumn>
                <!-- Para documentos y otros datos binarios, podrías querer usar un botón o indicador -->
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
